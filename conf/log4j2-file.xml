<Configuration status="DEBUG">
    <Properties>
        <Property name="basePath">/opt/iotics/elastic-sink-1.0-SNAPSHOT</Property>
    </Properties>
    <Appenders>
        <RollingFile name="fileLogger"
                     fileName="${basePath}/elastic-sink.log"
                     filePattern="${basePath}/app-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
            <!-- Max 10 files will be created everyday -->
            <DefaultRolloverStrategy max="10">
                <Delete basePath="${basePathr}" maxDepth="10">
                    <!-- Delete all files older than 30 days -->
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>
    <Loggers>
        <!-- avoid duplicated logs with additivity=false -->
        <Logger name="smartrics" level="debug" additivity="false">
            <AppenderRef ref="fileLogger"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="fileLogger"/>
        </Root>
    </Loggers>
</Configuration>